<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/tob_actionbar"
        android:id="@+id/include_tab"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#fff">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="19dp"
                    android:textSize="@dimen/dimen_40dp"
                    android:text="【"/>
                <TextView
                    android:id="@+id/titl_type"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="@dimen/dimen_40dp"
                    android:text=""/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:textSize="@dimen/dimen_40dp"
                    android:text="】"/>
                <TextView
                    android:id="@+id/tv_demand_title"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"

                    android:textColor="@color/transparentBlack"
                    android:gravity="center"
                    android:text="标题"
                    android:textSize="@dimen/dimen_40dp" />
                <TextView
                    android:id="@+id/tv_demand_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimen_400dp"
                    android:text="2000元/天"
                    android:gravity="right"
                    android:textSize="20dp"
                    android:textStyle="bold" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:padding="@dimen/dimen_8dp">

                <TextView
                    android:id="@+id/tv_demand_parameter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tx_1"
                    android:layout_alignStart="@+id/tx_1"
                    android:layout_below="@+id/tx_1"
                    android:layout_marginTop="9dp"
                    android:layout_marginLeft="15dp"
                    android:text="    ★扫描速率： 850扫\n
   ★脉冲重复频率：400KHz\n
   ★时窗：80纳秒\n
   ★采样点数： 512\n
   ★叠加数： 20\n
   ★分辨率： 5皮秒\n
   ★采样间隔： 2.4cm\n
   ★A/D转换 ： 16bit"
                    android:textSize="15dp"
                     />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:orientation="horizontal"
                android:background="#fff">



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#fff">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/transparentBlack"
                    android:text="联系方式"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★电话："
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tx_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="010-57233523"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★传真："
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tx_user_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="010-84933563"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★网址："
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tx_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="www.jieaosi.com"
                    android:textSize="15dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★邮箱："
                    android:textSize="15dp" />
                <TextView
                    android:id="@+id/tx_user_weChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="jieaosi@163.com"
                    android:textSize="15dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="————我的底线————"
                    android:textSize="@dimen/dimen_40dp" />
            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="@dimen/dimen_20dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/tob_actionbar"/>

</LinearLayout>