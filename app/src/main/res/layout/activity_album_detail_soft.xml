<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tob_actionbar"
        android:id="@+id/include_tab"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="5dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:id="@+id/soft_pic"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件信息"
                    android:textColor="@color/transparentBlack"
                    android:textStyle="bold"
                    android:textSize="@dimen/dimen_40sp" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#f5f5f5"
                android:padding="@dimen/dimen_8dp">

                <TextView
                    android:id="@+id/tx_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/tx_1"
                    android:layout_alignStart="@+id/tx_1"
                    android:layout_below="@+id/tx_1"
                    android:layout_marginTop="9dp"
                    android:text="   ★价格:"
                    android:textSize="15sp"
                    android:textColor="@color/transparentBlack"
                    android:textStyle="bold" />


                <TextView
                    android:id="@+id/soft_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tx_1"
                    android:text="钻井机"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/soft_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/soft_name"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tx_2"
                    android:text="¥70000"
                    android:textSize="15sp" />


                <TextView
                    android:id="@+id/soft_platml"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/soft_price"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/tx_5"
                    android:text="Linux"
                    android:textSize="18sp"

                    />

                <TextView
                    android:id="@+id/tx_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/soft_name"
                    android:layout_alignBottom="@+id/soft_name"

                    android:layout_marginLeft="5dp"
                    android:textColor="@color/transparentBlack"
                    android:text="   ★名称:"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/soft_platml"
                    android:layout_alignBottom="@+id/soft_platml"

                    android:layout_marginLeft="5dp"
                    android:text="   ★运行平台:"
                    android:textSize="15sp"
                    android:textColor="@color/transparentBlack"
                    android:textStyle="bold" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="软件描述"
                    android:textStyle="bold"
                    android:textColor="@color/transparentBlack"
                    android:textSize="@dimen/dimen_40sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/soft_describe"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginTop="5dp"
                android:background="#f5f5f5"
                android:paddingLeft="5dp"
                android:text="    ★扫描速率： 850扫\n
   ★脉冲重复频率：400KHz\n
   ★时窗：80纳秒\n
   ★采样点数： 512\n
   ★叠加数： 20\n
   ★分辨率： 5皮秒\n
   ★采样间隔： 2.4cm\n
   ★A/D转换 ： 16bit"
                android:textSize="19sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注"
                   android:textStyle="bold"
                    android:textColor="@color/transparentBlack"
                    android:textSize="@dimen/dimen_40sp" />


            </LinearLayout>

            <TextView
                android:id="@+id/soft_property"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/dimen_5dp"
                android:layout_marginRight="@dimen/dimen_5dp"
                android:layout_marginTop="5dp"
                android:background="#f5f5f5"
                android:paddingLeft="5dp"
                android:text="无"
                android:textSize="19sp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#fff">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:textColor="@color/transparentBlack"
                    android:text="联系方式"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★电话："
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tx_user_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="010-57233523"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★传真："
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tx_user_qq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="010-84933563"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★网址："
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tx_user_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="www.jieaosi.com"
                    android:textSize="15sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="  ★邮箱："
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/tx_user_weChat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:layout_marginTop="2dp"
                    android:background="#f5f5f5"
                    android:paddingLeft="5dp"
                    android:text="jieaosi@163.com"
                    android:textSize="15sp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_20dp"
                android:background="#fff"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_marginBottom="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="————我的底线————"
                    android:textSize="@dimen/dimen_40sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:background="#fff"
                android:layout_marginTop="@dimen/dimen_20dp">

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <include
        layout="@layout/tob_actionbar"/>

</LinearLayout>