<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="20dp"
    >

    <ImageView
        android:id="@+id/btn_alipay"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/pay_ali"
        />

    <ImageView
        android:id="@+id/btn_wechatpay"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:src="@drawable/pay_wechat2"

        />

    <Button
        android:id="@+id/btn_pay_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3CB371"
        android:gravity="center"
        android:textSize="18sp"
        android:text="确认支付 ￥12.34"
        />

    <Button
        android:id="@+id/btn_pay_cancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFB90F"
        android:gravity="center"
        android:textSize="18sp"
        android:layout_marginTop="10dp"
        android:text="取消支付"
        />





</LinearLayout>