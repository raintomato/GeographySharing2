<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!-- 7-6 修改输入提示 -->
    <include
        layout="@layout/tob_actionbar"/>

    <ImageButton
        android:id="@+id/imageView"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_below="@+id/create_user_title"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="@drawable/tubiao" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="昵    称:"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/person_data_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入昵称"
            android:layout_gravity="center_vertical"
            android:inputType="textPersonName"
            android:maxLength="10"
            android:textColorHint="#fa88"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <EditText
            android:id="@+id/person_data_wechat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入支付宝账户"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:maxLength="16"
            android:textColorHint="#fa88"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Q      Q:"
            android:textSize="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/person_data_qq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入QQ号码"
            android:layout_gravity="center_vertical"
            android:inputType="textPersonName"
            android:maxLength="11"
            android:textColorHint="#fa88"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电    话:"
            android:textSize="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/link_mobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入电话号码"
            android:layout_gravity="center_vertical"
            android:inputType="number"
            android:maxLength="11"
            android:textColorHint="#fa88"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="邮    箱:"
            android:textSize="20dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/edt_user_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入邮箱地址"
            android:layout_gravity="center_vertical"
            android:inputType="textEmailAddress"
            android:textColorHint="#fa88"
            android:maxLength="20"
            android:textSize="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地    址:"
            android:textSize="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="7dp"
            android:textColor="@color/black"
            />
        <EditText
            android:id="@+id/person_data_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/login_edit"
            android:hint="请输入住址"
            android:layout_gravity="center_vertical"
            android:maxLength="100"
            android:maxLines="3"
            android:textColorHint="#fa88"
            android:textSize="20dp" />
    </LinearLayout>





    <Button
        android:id="@+id/btn_person_data_modify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/login_button"
        android:onClick="onClick"
        android:text="确认修改"
        android:textColor="#fff"
        android:textSize="20dp" />

</LinearLayout>
