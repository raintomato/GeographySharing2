<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/equip_image"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_weight="2" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/equip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/equip_property"
            android:layout_gravity="center_horizontal"
            android:text="名称"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/equip_property"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equip_name"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="1"
            android:text="性能参数" />

        <TextView
            android:id="@+id/equip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equip_property"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:text="地点" />


    </RelativeLayout>

    <ImageButton
        android:id="@+id/img_btn_delete_request"
        android:layout_width="1dp"
        android:layout_height="32dp"
        android:layout_weight="1"
        android:layout_marginRight="10dp"
        android:gravity="center_vertical"
        android:layout_gravity="center_vertical"
        android:background="@drawable/fav_delete"/>
</LinearLayout>