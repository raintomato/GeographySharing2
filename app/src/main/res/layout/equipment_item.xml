<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/equip_image"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="@dimen/dimen_5dp"
        android:scaleType="centerCrop"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/equip_property"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equip_name"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="3dp"
            android:textSize="12dp"
            android:layout_weight="1"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="性能参数" />

        <TextView
            android:id="@+id/equip_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/equip_property"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="2dp"
            android:textSize="12dp"
            android:paddingTop="2dp"
            android:singleLine="true"
            android:text="地点" />
        <TextView
            android:id="@+id/equip_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textSize="12dp"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:layout_marginBottom="@dimen/dimen_17dp"
            android:text="价格" />

        <TextView
            android:id="@+id/equip_name"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            android:text="名称"
            android:singleLine="true"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/transparentBlack"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/equip_property" />

    </RelativeLayout>


</LinearLayout>